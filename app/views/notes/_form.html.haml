= bootstrap_form_for [@current_user, @note] do |form|
  - if @note.errors.any?
    #error_explanation
      %h2
        = pluralize(@note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message
  = form.text_area :text
  = form.check_box :favorite?
  = form.submit 'Add note', class: 'btn btn-lg btn-primary btn-block'