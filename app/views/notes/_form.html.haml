= form_for @note, url: user_note_path(@current_user.id) do |f|
  - if @note.errors.any?
    #error_explanation
      %h2
        = pluralize(@note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :text
    %br
      = f.text_field :text
  .field
    = f.label :favorite?
    %br
      = f.check_box :favorite?
  .actions
    = f.submit