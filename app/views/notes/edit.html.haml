= bootstrap_form_for [@current_user, @note], url: { action: :update } do |form|
  - if @note.errors.any?
    #error_explanation
      %h2
        = pluralize(@note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message
  = form.text_area :text
  = form.check_box :favorite
  = button_to 'Destroy', user_note_path(id: @note.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-caution'
  = form.submit 'Update note', class: 'btn btn-lg btn-primary btn-block'
